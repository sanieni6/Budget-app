<header class="flex flex-row bg-main w-full px-2 py-3 text-white justify-between items-center">
<% if name == 'Categories' %>
    <img src=<%=asset_path('bar.svg')%> class="w-7 h-7 ml-1">
<% elsif name== 'Transactions' || name == 'New Category' %>
    <%= link_to '', groups_path, class: 'back-image ml-1', style: "background-image: url(#{asset_path('arrow-small-left.svg')})" %>
<% elsif name== 'Transactions' || name == 'New Transaction' %>
    <%= link_to '', group_path(@group), class: 'back-image ml-1', style: "background-image: url(#{asset_path('arrow-small-left.svg')})" %>
<% else %>
    <%= link_to '',root_path, class: 'back-image ml-1', style: "background-image: url(#{asset_path('bar.svg')})" %>
<% end %>
<h1 class="font-nova text-lg font-thin flex flex-row items-center text-text-w">
<img src=<%=asset_path('wallet.svg')%> class="w-5 h-5"><%=name.upcase%></h1>
<% if name == 'LOGIN' %>
    <%= action.submit "Log in", class:"bg-main text-text-w rounded p-1 mr-1" %>
<% elsif name == 'REGISTER' %>
    <%= action.submit "Sign up", class:"bg-main text-text-w rounded p-1 mr-1" %>  
<% elsif name == 'Categories' || name == 'Transactions' %>
    <%= button_to "Log Out", destroy_user_session_path, method: :delete, class:"font-nova text-text-w"%>
<% elsif name == 'New Category' || name == 'New Transaction' %>
    <%= action.submit "Save", class:"bg-main text-text-w rounded p-1 mr-1" %>
<% else %>
    <span class="mr-1"></span>
<% end %>
</header>